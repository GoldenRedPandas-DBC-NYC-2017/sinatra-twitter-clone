<% if logged_in? %>
  <form id='tweet-form' action='/tweets' method='POST'>
    <textarea rows='3' cols='50' name='tweet[content]'></textarea>
    <input type='hidden' name='tweet[author_id]' value='<%= current_user.id %>'>
    <input type='submit' value='Tweet'>
  </form>
<% else %>
  <h2><a href='/register'>Register to tweet</a></h2>
<% end %>


<li>
<div class='single-tweet'>
  <% if logged_in? %>
    <% if tweet.author.id == current_user.id %>
      <form action='/tweet/<%= tweet.id %>' method='POST'>
        <input type='hidden' name='_method' value='DELETE'>
        <input class='delete-button' type='submit' value='x'></input>
      </form>
    <% end %>
  <% end %>
</div>
</li>









