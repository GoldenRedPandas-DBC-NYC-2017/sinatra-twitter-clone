<% if @errors %>
  <% @errors.each do |error| %>
    <%= error %>
  <% end %>
<% end %>

<form action="/tweets/<%=@tweet.id %>" method="post">
  <input type="hidden" name="_method" value="put">
  <input type="text" name="post[body]" value="<%= @tweet.body %>">
