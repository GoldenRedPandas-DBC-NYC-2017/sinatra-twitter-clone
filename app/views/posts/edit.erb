<h1>Edit Tweet</h1>

<% if @errors %>
  <% @errors.each do |e| %>
    <%= e %>
  <% end %>
<% end %>

<form action="/posts/<%=@post.id %> method="post">
  <input type="hidden" name="_method" value="put">
  <input type="text" name="post[body]" value="<%= @post.body %>">
  <input type="submit" value="Update">
</form>