<h1> Welcome to Thomas's Fake Twitter! </h1>

<nav>
  <% if logged_in? %>
    <h3> Current User: <a href="/users/<%= @current_user.id %>"> <%= @current_user.username %> </a>
    <h4> Followers: <%= @current_user.followers.length %><br>
    <h4> Following: <%= @current_user.followees.length %><br><br>
    <a href="/tweets/new"> New Tweet</a><br>
    <a href="/sessions/logout"> Log Out</a>
  <% else %>
    <a href="/sessions/new"> Login </a> <p>
    <a href="/users/new"> Register!</a>
  <% end %>
</nav>

<div name="container">
  <% @tweets.each do |tweet| %>
    <p><%= tweet.body %> </p>
    <% @tweet_author = tweet.user.id %>
    <p>Posted By: <a href="/users/<%= @tweet_author %>"> <%= tweet.user.username %> </a></p>
      <% if own_tweet?(tweet) %>
        <h4><a href="tweets/<%= tweet.id %>/edit"> Edit</a>
        <%= erb :"tweets/_delete", layout: false, locals: {tweet: tweet} %>
      <% end %>
  <% end %>
</div>
