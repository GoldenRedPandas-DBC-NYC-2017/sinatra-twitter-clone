<div class="container">

  <center><h1>Twitter Clone</h1></center>

  <br>
  <center><h2><%= current_user.username %>'s Profile</h2>
  <h4>Tweets: <%= current_user.tweets.length %> |
  Followers: <%= current_user.followees.length %> |
  Following: <%= current_user.followings.length %></h4>

  <a href="/tweets/new">Create a tweet!</a>
  <a href="/users/index">Users</a></center>

  <h3>Tweets:</h3>
  <% @tweets.each do |tweet| %>
    <p><%= tweet.content %>
    - <%= tweet.user.username %>
    <% if tweet[:user_id] == current_user.id %> </p>
    <form action="/tweets" method="post">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" class="button" value="delete">
    <form action="/tweets" method="post">
    <input type="hidden" name="_method" value="put">
    <input type="submit" class="button" value="update">
    <% end %>
  <% end%>


  <br>
  <br>
  <a href= "/users/logout"> Log Out </a>

</div>
